{
  "version": "2.0.10",
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": false,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": [
      "es6",
      "dom"
    ],
    "baseUrl": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "target": "ES5",
    "paths": {
      "*": [
        "*",
        "../scripts/*"
      ]
    }
  }
}
